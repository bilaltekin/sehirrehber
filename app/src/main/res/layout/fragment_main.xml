<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/mainTitle"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.4"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/mainIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"


            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="103dp"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/mekanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Tarihi Mekanlar"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="332dp" />

            <Button
                android:id="@+id/yemekBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Yemek"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="405dp" />

            <Button
                android:id="@+id/hastaneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Hastaneler"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="487dp" />

            <Button
                android:id="@+id/kurumBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Kurumlar"
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="564dp" />

            <Button
                android:id="@+id/tarihceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="TarihÃ§e"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="641dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
